<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content" android:id="@+id/relativeLayout_chat_extraLecture"
        android:layout_height="wrap_content" android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="From_name" android:id="@+id/textView_chat_extraLecture_from_name"
            android:textStyle="bold" android:textSize="25px"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="From_id" android:id="@+id/textView_chat_extraLecture_from_id"
            android:textStyle="bold" android:textSize="25px"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"/>

        <GridLayout
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/gridLayout"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@+id/textView_chat_extraLecture_from_name"
            android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Subject: " android:id="@+id/textView_chat_extraLecture_subject"
            android:textColor="@android:color/holo_blue_dark"  android:textSize="22px"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="22px"
            android:text="sub" android:id="@+id/textView_chat_extraLecture_subject_val"
            android:layout_row="0" android:textColor="@android:color/holo_blue_dark"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Venue: " android:id="@+id/textView_chat_extraLecture_venue"
            android:textSize="22px" android:textColor="@android:color/holo_blue_dark"
            android:layout_row="0"
            android:layout_column="3" />

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Ven" android:id="@+id/textView_chat_extraLecture_venue_val"
            android:textSize="22px" android:textColor="@android:color/holo_blue_dark"
            android:layout_row="0"
            android:layout_column="4" />

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Date: " android:id="@+id/textView_chat_extraLecture_date"
            android:layout_row="1" android:textSize="30px"
            android:layout_column="2" android:textColor="@android:color/holo_blue_dark"/>
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="date" android:id="@+id/textView_chat_extraLecture_date_val"
            android:layout_row="1" android:textSize="30px"
            android:layout_column="3" android:textColor="@android:color/holo_blue_dark"/>
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="From: " android:id="@+id/textView_chat_extraLecture_fromtime"
            android:layout_row="2" android:textSize="22px"
            android:layout_column="0" android:textColor="@android:color/holo_blue_dark"/>
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="from" android:id="@+id/textView_chat_extraLecture_fromtime_val"
            android:layout_row="2" android:textSize="22px"
            android:layout_column="1" android:textColor="@android:color/holo_blue_dark"/>

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="To: " android:id="@+id/textView_chat_extraLecture_totime"
            android:layout_row="2" android:textSize="22px"
            android:layout_column="3" android:textColor="@android:color/holo_blue_dark"/>
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="from" android:id="@+id/textView_chat_extraLecture_totime_val"
            android:layout_row="2" android:textSize="22px"
            android:layout_column="4" android:textColor="@android:color/holo_blue_dark"/>

    </GridLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Message" android:id="@+id/textView_chat_extraLecture_totime_message"
        android:layout_gravity="center_horizontal" android:textSize="25px"
        android:layout_below="@+id/gridLayout" android:textStyle="bold"
        android:layout_centerHorizontal="true" android:textColor="@android:color/black"
        android:layout_marginTop="15dp" />
</LinearLayout>
