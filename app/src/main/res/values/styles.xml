<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:actionBarSize">10dp</item>-->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <!--<item name="android:actionBarItemBackground">@android:color/holo_blue_light</item>-->
        <!--<item name="android:actionBarDivider">@android:color/holo_blue_bright</item>-->
    </style>

    <style name="textNUConnect">
        <item name="android:fadeEnabled">true</item>
        <item name="android:animation">@anim/abc_fade_in</item>
        <item name="android:fadeDuration">@android:integer/config_shortAnimTime</item>
    </style>
    <style name="textAppToRe">
        <item name="android:fadeEnabled">true</item>
        <item name="android:animation">@anim/abc_fade_in</item>
        <item name="android:fadeDuration">@android:integer/config_mediumAnimTime</item>
    </style>

    <style name="spinner_text_view_style">
        <item name="android:dropDownSelector">@android:color/holo_blue_light</item>
    </style>

    <style name="receipent_autocompletetextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">18</item>
        <item name="android:hint">Enter Username</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="inform_button">
        <item name="android:colorBackground">@android:color/holo_blue_dark</item>
    </style>

    <style name="BodyTheme" parent="android:Theme.Material">
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterTransition">@anim/abc_fade_in</item>
    </style>

</resources>
